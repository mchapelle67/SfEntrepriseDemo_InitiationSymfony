{% extends 'base.html.twig' %}

{% block title %} Listes des entreprises {% endblock %}

{% block body %}
    <h1> Liste des entreprises </h1>
    {% for entreprise in entreprises %}
        <a href="{{ path('show_entreprise', { 'id': entreprise.id }) }}">{{ entreprise }}</a> 
        <a class="btn btn-warning" href="{{ path ('edit_entreprise', {'id': entreprise.id}) }}">Edit</a>
        <a class="btn btn-danger" href="{{ path ('delete_entreprise', {'id': entreprise.id}) }}">Supprimer</a><br>
    {% endfor %}
{% endblock %}
